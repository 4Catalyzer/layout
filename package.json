{
  "name": "@4c/layout",
  "version": "0.2.0",
  "main": "lib/css-modules/index.js",
  "module": "es/css-modules/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/4Catalyzer/layout.git"
  },
  "author": "4Catalyzer",
  "license": "MIT",
  "scripts": {
    "test": "npm run lint",
    "build:es": "babel src -d es --env-name esm --ignore **/__tests__ --delete-dir-on-start -D",
    "build:lib": "babel src -d lib --ignore **/__tests__ --delete-dir-on-start -D",
    "build": "npm run build:lib && npm run build:es",
    "prepublishOnly": "yarn run build",
    "lint": "eslint . && prettier --list-different --ignore-path .eslintignore '**/*.{json,css,md}'",
    "format": "eslint . --fix && prettier --write --ignore-path .eslintignore '**/*.{json,css,md}'",
    "precommit": "lint-staged",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once"
  },
  "publishConfig": {
    "access": "public"
  },
  "prettier": {
    "printWidth": 79,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,css,md}": [
      "prettier --write --ignore-path .eslintignore",
      "git add"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/test"
    ],
    "testEnvironment": "jsdom"
  },
  "release": {
    "extends": [
      "@4c/semantic-release-config"
    ]
  },
  "devDependencies": {
    "@4c/babel-preset-4catalyzer": "^3.0.0",
    "@4c/semantic-release-config": "^1.0.2",
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "babel-core": "bridge",
    "babel-eslint": "^9.0.0",
    "babel-jest": "^23.4.2",
    "eslint": "^5.4.0",
    "eslint-config-4catalyzer-react": "^0.4.1",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.22.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.5.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.2",
    "react": "^16.4.2",
    "semantic-release": "^15.9.12",
    "travis-deploy-once": "^5.0.7"
  },
  "peerDependencies": {
    "react": "^16.4.1"
  },
  "dependencies": {
    "@babel/runtime": "^7.0.0",
    "classnames": "^2.2.6",
    "prop-types": "^15.6.2",
    "prop-types-extra": "^1.1.0"
  }
}
