{
  "name": "@4c/layout",
  "version": "2.0.1",
  "files": [
    "lib",
    "es"
  ],
  "main": "lib/index.js",
  "module": "es/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "rm -rf es lib && rollup -c && yarn build:types",
    "build:types": "cp types/* lib",
    "format": "eslint . --fix && npm run prettier -- --write",
    "lint": "eslint . && npm run prettier -- -l",
    "prepublishOnly": "npm run build",
    "prettier": "prettier --ignore-path .eslintignore '**/*.{css,json,md,ts}'",
    "test": "npm run lint && npm run test:ts",
    "test:ts": "dtslint types"
  },
  "publishConfig": {
    "access": "public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.{css,json,md,ts}": "prettier --write --ignore-path .eslintignore"
  },
  "prettier": {
    "printWidth": 79,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "importSort": {
    ".js, .ts, .tsx": {
      "style": "@4c/import-sort"
    }
  },
  "release": {
    "extends": [
      "@4c/semantic-release-config"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/4Catalyzer/layout.git"
  },
  "author": "4Catalyzer",
  "license": "MIT",
  "dependencies": {
    "@types/react": "^16.8.12",
    "classnames": "^2.2.6",
    "prop-types": "^15.7.2"
  },
  "peerDependencies": {
    "react": "^16.4.1"
  },
  "devDependencies": {
    "@4c/babel-preset": "^7.3.0",
    "@4c/import-sort": "^4.3.6",
    "@4c/semantic-release-config": "^2.0.4",
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@csstools/postcss-sass": "^4.0.0",
    "@modular-css/rollup": "^25.2.0",
    "babel-eslint": "^10.0.3",
    "dtslint": "^2.0.5",
    "eslint": "^6.8.0",
    "eslint-config-4catalyzer-react": "^1.0.2",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.3",
    "postcss-scss": "^2.0.0",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "rollup": "^1.29.1",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "semantic-release": "^17.0.0",
    "sass": "^1.25.0"
  }
}
