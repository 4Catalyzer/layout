{
  "name": "@4c/layout",
  "version": "2.1.1",
  "files": [
    "lib",
    "es"
  ],
  "main": "lib/index.js",
  "module": "es/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "rm -rf es lib && rollup -c && yarn build:types",
    "build:types": "cp types/* lib",
    "format": "eslint . --fix && npm run prettier -- --write",
    "lint": "eslint . && npm run prettier -- -l",
    "prepublishOnly": "npm run build",
    "prettier": "prettier --ignore-path .eslintignore '**/*.{css,json,md,ts}'",
    "test": "npm run lint"
  },
  "publishConfig": {
    "access": "public"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.{css,json,md,ts}": "prettier --write --ignore-path .eslintignore"
  },
  "prettier": {
    "printWidth": 79,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/4Catalyzer/layout.git"
  },
  "author": "4Catalyzer",
  "license": "MIT",
  "release": {
    "conventionalCommits": true
  },
  "dependencies": {
    "@types/react": ">=17.0.13",
    "classnames": "^2.3.1",
    "prop-types": "^15.7.2"
  },
  "peerDependencies": {
    "react": ">=16.4.1"
  },
  "devDependencies": {
    "@4c/babel-preset": "^8.1.2",
    "@4c/semantic-release-config": "^2.2.0",
    "@babel/cli": "^7.25.9",
    "@babel/core": "^7.25.9",
    "@csstools/postcss-sass": "^4.0.0",
    "@modular-css/rollup": "^26.0.0",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "babel-eslint": "^10.1.0",
    "dtslint": "^4.2.1",
    "eslint": "^7.32.0",
    "eslint-config-4catalyzer-react": "^1.3.0",
    "eslint-config-4catalyzer-typescript": "^3.3.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.1",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "hookem": "^1.0.9",
    "lint-staged": "^11.2.6",
    "postcss-scss": "^4.0.9",
    "prettier": "^2.8.8",
    "react": "^17.0.2",
    "rollup": "^2.52.7",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "sass": "^1.80.4",
    "semantic-release": "^17.4.4",
    "typescript": "^4.9.5"
  }
}
