{
  "name": "@4c/layout",
  "version": "1.0.0",
  "files": [
    "lib",
    "es"
  ],
  "main": "lib/css-modules/index.js",
  "module": "es/css-modules/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "npm run build:lib && npm run build:es && npm run build:types",
    "build:es": "babel src -d es --env-name esm --ignore **/__tests__ --delete-dir-on-start -D",
    "build:lib": "babel src -d lib --ignore **/__tests__ --delete-dir-on-start -D",
    "build:types": "cp types/* lib",
    "format": "eslint . --fix && npm run prettier -- --write",
    "lint": "eslint . && npm run prettier -- -l",
    "prepublishOnly": "npm run build",
    "prettier": "prettier --ignore-path .eslintignore '**/*.{css,json,md,ts}'",
    "test": "npm run lint && npm run test:ts",
    "test:ts": "dtslint types"
  },
  "publishConfig": {
    "access": "public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{css,json,md,ts}": [
      "prettier --write --ignore-path .eslintignore",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 79,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "release": {
    "extends": [
      "@4c/semantic-release-config"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/4Catalyzer/layout.git"
  },
  "author": "4Catalyzer",
  "license": "MIT",
  "dependencies": {
    "@types/react": "^16.8.12",
    "classnames": "^2.2.6",
    "prop-types": "^15.7.2"
  },
  "peerDependencies": {
    "react": "^16.4.1"
  },
  "devDependencies": {
    "@4c/babel-preset": "^7.2.4",
    "@4c/semantic-release-config": "^2.0.3",
    "@babel/cli": "^7.7.5",
    "@babel/core": "^7.7.5",
    "babel-eslint": "^10.0.3",
    "dtslint": "^2.0.2",
    "eslint": "^6.7.2",
    "eslint-config-4catalyzer-react": "^1.0.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "semantic-release": "^15.13.31"
  }
}
